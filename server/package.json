{
  "name": "typescript-react-express-typescript-starter-backend",
  "version": "0.1.0",
  "description": "Fully typed fullstack starter for Typescript, React and Express",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgke/typescript-react-express-starter"
  },
  "author": "Jaakko Hannikainen",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "pwd && jest --forceExit",
    "watch-test": "CI=true npm run test -- --watch",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "2.6.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.18.3",
    "cors": "2.8.4",
    "errorhandler": "1.5.0",
    "express": "4.16.3",
    "express-validator": "5.3.0",
    "lodash": "4.17.10",
    "lusca": "1.6.1",
    "morgan": "1.9.0",
    "request": "2.88.0"
  },
  "devDependencies": {
    "@types/async": "2.0.49",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.4",
    "@types/errorhandler": "0.0.32",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/jquery": "3.3.6",
    "@types/lodash": "4.14.116",
    "@types/morgan": "1.7.35",
    "@types/node": "10.9.4",
    "@types/request": "2.47.1",
    "@types/supertest": "2.0.5",
    "concurrently": "4.0.1",
    "jest": "23.5.0",
    "nodemon": "1.18.4",
    "shelljs": "0.8.2",
    "supertest": "3.1.0",
    "ts-jest": "23.1.4",
    "tslint": "5.11.0",
    "typescript": "3.0.3"
  }
}
